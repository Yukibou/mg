= simple_form_for(@packing_list) do |f|
  = f.error_notification

  .form-inputs
    = f.input :public
    = image_tag f.object.image.thumb
    = f.input :image, as: :file
    = f.input :title
    = f.input :comment
  %hr/
  .form-group
    .checkbox
      = f.collection_check_boxes :gear_ids, current_user.gears.all, :id, :display_name, boolean_style: :inline do |b|
        -#- TODO:画像を小さくしてレイアウトを調整すること
        = b.label { b.check_box + b.text + "#{image_tag(Gear.find(b.value).image.thumb)}".html_safe  }
        %br

  .form-actions
    = f.button :submit
